<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/css/style.css" rel="stylesheet" />
    <script src="/js/app.js" defer></script>
    <title>Home</title>
  </head>
  <body>
    <br />
    <div class="row">
      
      <div class="col">
        <br>
        <br>
        <h3>Owner's Data</h3>
        <br />
      </div>

    </div>
    {{! Owner's Data }}
    <div class="row row-cols-2">
      <div class="col">

        <div class="mb-3">
          <label for="date" class="form-label font">Date</label>
          <input type="date" class="form-control" id="date" />
        </div>
      </div>

      <div class="col">
        <div class="mb-3">
          <label for="address" class="form-label font">Address</label>
          <input type="text" class="form-control" id="address" />
        </div>
      </div>

      <div class="col" style="">
        <div class="mb-3">
          <label for="owner" class="form-label font">Owenr's Name</label>
          <input type="text" class="form-control" id="owner" />
        </div>
      </div>

      <div class="col">
        <div class="mb-3">
          <label for="phone" class="form-label font">Phone</label>
          <input type="number" class="form-control" id="phone" />
        </div>
      </div>
    </div>
    <hr class="my-4" />
    <div class="row">
      <div class="col">
        <br />
        <h3>Pet Animal Data</h3>
        <br />
      </div>
    </div>

    {{! Pet's Data }}
    <div class="row row-cols-2">
      <div class="col">

        <div class="mb-3">
          <label for="pets_name" class="form-label font">Pets Name</label>
          <input type="text" class="form-control" id="pets_name" />
        </div>
      </div>

      <div class="col">
        <div class="mb-3">
          <label for="age" class="form-label font">Age</label>
          <input type="text" class="form-control" id="age" />
        </div>
      </div>
    </div>

    <div class="row row-cols-3">
      <div class="col">
        <div class="mb-3">
          <label for="pets_type" class="form-label font">Type</label>
          <input type="text" class="form-control" id="pets_type" />
        </div>
      </div>

      <div class="col">
        <div class="mb-3">
          <label for="breed" class="form-label font">Breed</label>
          <input type="text" class="form-control" id="breed" />
        </div>
      </div>

      <div class="col">
        <div class="mb-3">
          <label for="color" class="form-label font">Color</label>
          <input type="text" class="form-control" id="color" />
        </div>
      </div>
    </div>

    <div class="row row-cols-3">
      <div class="col" style="font-size: 16px; margin-top: 19px;">
        <label style="display: block; margin-right: 10px;">Sex</label>
        <div
          class="form-check"
          style="display: inline-block; margin-right: 10px;"
        >
          <input
            class="form-check-input"
            type="radio"
            name="flexRadioDefault"
            id="female"
          />
          <label class="form-check-label" for="female">
            Female
          </label>
        </div>

        <div class="form-check" style="display: inline-block;">
          <input
            class="form-check-input"
            type="radio"
            name="flexRadioDefault"
            id="male"
          />
          <label class="form-check-label" for="male">
            Male
          </label>
        </div>
      </div>

      <div class="col" style="font-size: 16px; margin-top: 19px;">
        <label
          style="display: block; margin-right: 10px;"
        >Natured/Spayed</label>
        <div
          onchange="checked()"
          class="form-check"
          style="display: inline-block; margin-right: 10px;"
        >
          <input
            class="form-check-input"
            type="radio"
            name="flexRadioDefault"
            id="yes"
          />
          <label class="form-check-label" for="yes">
            Yes
          </label>
        </div>
        <div
          onchange="unChecked()"
          class="form-check"
          style="display: inline-block; margin-right: 10px;"
        >
          <input
            class="form-check-input"
            type="radio"
            name="flexRadioDefault"
            id="no"
          />
          <label class="form-check-label" for="no">
            No
          </label>
        </div>
      </div>

      <div class="col" id="natured_date" style="margin-top: 30px;" hidden>
        <div>
          {{!-- <label for="date" class="form-label font">Date</label> --}}
          <input type="date" class="form-control" id="date"  />
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col">
        
        <button
          type="submit"
          class="btn btn-primary"
          style="margin: 25px auto; display: flex; justify-content: center; width: 200px;"

        >Submit</button>
      </div>
    </div>

  </body>

</html>